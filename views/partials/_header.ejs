<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!user.email) { %>
    <form action="/login" method="POST">
      <div class="form-row align-items-center form-control-lg">
        <div class="col-auto">
        </div>
        <div class="col-auto">
          <input type="text" class="form-control" name="username" placeholder="username">
        </div>
        <div class="col-auto">
          <button class="btn btn-outline-dark">Login</button>
        </div>
      </div>
    </form>
    <% } else { %>
      <form action="/logout" method="POST">
        <div class="form-row align-items-center form-control-lg">
          <div class="col-auto">
          </div>
          <div class="col-auto">
            <label class="my-1 mr-2">Logged in as: <%= user.email %></label>
            <!-- <input type="text" class="form-control" name="username" placeholder="username"> -->
          </div>
          <div class="col-auto">
            <button class="btn btn-outline-dark">Logout</button>
          </div>
        </div>
      </form>
      <% } %>
  </nav>
</header>